{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Suicide Rates in Malaysia (Male vs Female, 2000 to 2021)",
    "subtitle": "Each icon marks a data point; lines show trends over time",
    "fontSize": 20,
    "anchor": "start"
  },
  "width": 900,
  "height": 450,
  "background": "#f9f9f9",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Matessh/Data-Visualisation-2-/refs/heads/main/Malaysia-Suicide-Rate-Male-2025-10-14-13-04%20(1).csv",
        "format": {
          "type": "csv",
          "parse": {"": "string", "Suicide Rate": "number"}
        }
      },
      "transform": [{"calculate": "toNumber(datum[''])", "as": "YearNum"}],
      "layer": [
        {
          "mark": {
            "type": "line",
            "interpolate": "monotone",
            "color": "#1f77b4",
            "strokeWidth": 2
          },
          "encoding": {
            "x": {"field": "Year", "type": "quantitative", "title": "Year"},
            "y": {
              "field": "Suicide_Rate",
              "type": "quantitative",
              "title": "Suicide Rate (per 100,000)"
            }
          }
        },
        {
          "mark": {"type": "image", "width": 20, "height": 20},
          "encoding": {
            "x": {"field": "Year", "type": "quantitative"},
            "y": {"field": "Suicide_Rate", "type": "quantitative"},
            "url": {
              "value": "https://raw.githubusercontent.com/Matessh/Data-Visualisation-2-/refs/heads/main/avatar-design.png"
            },
            "tooltip": [
              {"field": "Year", "type": "quantitative", "title": "Year"},
              {
                "field": "Suicide_Rate",
                "type": "quantitative",
                "title": "Male Rate",
                "format": ".2f"
              }
            ]
          }
        }
      ]
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Matessh/Data-Visualisation-2-/refs/heads/main/Malaysia-Suicide-Rate-Female-2025-10-14-13-04%20(1).csv",
        "format": {
          "type": "csv",
          "parse": {"": "string", "Suicide Rate": "number"}
        }
      },
      "transform": [{"calculate": "toNumber(datum[''])", "as": "YearNum"}],
      "layer": [
        {
          "mark": {
            "type": "line",
            "interpolate": "monotone",
            "color": "#f30999",
            "strokeWidth": 2
          },
          "encoding": {
            "x": {"field": "Year", "type": "quantitative", "title": "Year"},
            "y": {"field": "Suicide_Rate", "type": "quantitative"}
          }
        },
        {
          "mark": {"type": "image", "width": 20, "height": 20},
          "encoding": {
            "x": {"field": "Year", "type": "quantitative"},
            "y": {"field": "Suicide_Rate", "type": "quantitative"},
            "url": {
              "value": "https://raw.githubusercontent.com/Matessh/Data-Visualisation-2-/refs/heads/main/woman.png"
            },
            "tooltip": [
              {"field": "Year", "type": "quantitative", "title": "Year"},
              {
                "field": "Suicide_Rate",
                "type": "quantitative",
                "title": "Female Rate",
                "format": ".2f"
              }
            ]
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {"labelFontSize": 12, "titleFontSize": 14},
    "legend": {"orient": "top-right", "labelFontSize": 12, "titleFontSize": 13},
    "title": {"font": "sans-serif"}
  }
}